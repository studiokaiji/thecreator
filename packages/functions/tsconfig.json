{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@contracts": ["../hardhat/typechain-types/index.ts"],
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src", "test"
  ],
}
